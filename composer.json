{
    "name": "ecswoole/ecswoole",
    "type": "project",
    "description": "A coroutine framework that focuses on hyperspeed and flexible.",
    "keywords": [
        "php",
        "ecswoole",
        "swoole",
        "ecshop",
        "hyperf"
    ],
    "license": "Apache-2.0",
    "support": {
        "issues": "https://github.com/ecswoole/ecswoole/issues?state=open",
        "source": "https://github.com/ecswoole/ecswoole"
    },
    "require": {
        "php": ">=7.2",
        "ext-swoole": ">=4.5",
        "duncan3dc/blade": "^4.10",
        "hyperf/cache": "~2.0.0",
        "hyperf/command": "~2.0.0",
        "hyperf/config": "~2.0.0",
        "hyperf/database": "~2.0.0",
        "hyperf/db-connection": "~2.0.0",
        "hyperf/framework": "~2.0.0",
        "hyperf/guzzle": "~2.0.0",
        "hyperf/http-server": "~2.0.0",
        "hyperf/logger": "~2.0.0",
        "hyperf/memory": "~2.0.0",
        "hyperf/process": "~2.0.0",
        "hyperf/redis": "~2.0.0",
        "hyperf/session": "^2.0",
        "hyperf/task": "^2.0",
        "hyperf/validation": "^2.0",
        "hyperf/view": "^2.0",
        "hyperf/websocket-server": "^2.0",
        "overtrue/easy-sms": "^1.1",
        "overtrue/pinyin": "^4.0",
        "overtrue/wechat": "^v4.2",
        "yansongda/pay": "^2.9"
    },
    "require-dev": {
        "swoole/ide-helper": "^4.5",
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12",
        "hyperf/devtool": "~2.0.0",
        "hyperf/testing": "~2.0.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": [],
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container",
            "@php artisan app:autoload"
        ],
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config",
        "start": "php artisan start"
    }
}
